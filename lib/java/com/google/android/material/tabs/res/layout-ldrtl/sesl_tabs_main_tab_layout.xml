<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layoutDirection="ltr"
    android:layout_height="43dp">

    <com.google.android.material.tabs.SeslTabDotLineIndicator
        android:id="@+id/indicator"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_alignEnd="@id/title"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sesl_tablayout_maintab_indicator_opentheme_background" />

    <View
        android:id="@+id/main_tab_touch_background"
        android:layout_width="1dp"
        android:layout_height="43dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/sesl_tab_icon_size"
        android:layout_height="@dimen/sesl_tab_icon_size"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:contentDescription="@null" />

</RelativeLayout>
