<!--SESL variant-->

<view
    xmlns:android="http://schemas.android.com/apk/res/android"
    class="com.google.android.material.snackbar.SnackbarContentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:id="@+id/snackbar_content_layout"
    android:layout_marginBottom="@dimen/sesl_design_snackbar_layout_padding_bottom"
    android:background="@drawable/sem_snackbar_frame_mtrl"
    android:minHeight="44dp"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/snackbar_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_gravity="center_vertical|left|start"
      android:gravity="center_vertical"
      android:minHeight="17dp"
      android:paddingStart="@dimen/sesl_design_snackbar_text_padding_left"
      android:paddingEnd="@dimen/sesl_design_snackbar_text_padding_right"
      android:textAlignment="viewStart"
      android:textAppearance="@style/TextAppearance.Design.Snackbar.SeslFontRegular"
      android:textColor="@color/sesl_design_snackbar_text_color"
      android:textSize="@dimen/design_snackbar_text_size"
      />

    <Button
        android:id="@+id/snackbar_action"
        style="@style/TextAppearance.Design.Snackbar.SeslFontSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:background="@drawable/sem_snackbar_action_button_background"
        android:gravity="center"
        android:paddingLeft="@dimen/sesl_design_snackbar_action_padding_left"
        android:paddingRight="@dimen/sesl_design_snackbar_action_padding_right"
        android:textColor="@color/sesl_design_snackbar_action_text_color"
        android:textSize="@dimen/sesl_design_snackbar_action_text_size"
        android:visibility="gone" />

</view>
