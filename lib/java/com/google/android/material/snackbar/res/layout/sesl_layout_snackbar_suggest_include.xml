<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbar_content_layout"
    class="com.google.android.material.snackbar.SnackbarContentLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="@dimen/sesl_design_snackbar_layout_padding_bottom"
    android:background="@drawable/sesl_snackbar_suggest_action_frame_mtrl"
    android:minHeight="44dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:minHeight="17dp"
        android:paddingStart="@dimen/sesl_design_snackbar_text_padding_left"
        android:paddingEnd="@dimen/sesl_design_snackbar_text_padding_right"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.SeslFontRegular"
        android:textColor="@color/sesl_design_snackbar_suggest_text_color"
        android:textSize="@dimen/sesl_design_snackbar_suggest_text_size" />

    <Button
        android:id="@+id/snackbar_action"
        style="@style/TextAppearance.Design.Snackbar.SeslFontSemiBold"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/sesl_design_snackbar_suggest_button_height"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="6dp"
        android:background="@drawable/sesl_snackbar_suggest_action_button_background"
        android:gravity="center"
        android:paddingHorizontal="@dimen/sesl_design_snackbar_suggest_action_padding_horizontal"
        android:paddingLeft="@dimen/sesl_design_snackbar_suggest_action_padding_horizontal"
        android:paddingRight="@dimen/sesl_design_snackbar_suggest_action_padding_horizontal"
        android:textColor="@color/sesl_design_snackbar_suggest_action_text_color"
        android:textSize="@dimen/sesl_design_snackbar_suggest_action_text_size"
        android:visibility="gone" />
</view>