<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/sesl_appbar_extended_title_padding"
    android:layout_marginLeft="@dimen/sesl_appbar_extended_title_padding"
    android:layout_marginRight="@dimen/sesl_appbar_extended_title_padding"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/suggest_app_bar_close"
        android:layout_width="@dimen/sesl_appbar_suggest_close_button_size"
        android:layout_height="@dimen/sesl_appbar_suggest_close_button_size"
        android:layout_above="@+id/suggest_app_bar_center_layout"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/sesl_appbar_suggest_close_button_vertical"
        android:visibility="gone" />

    <include layout="@layout/sesl_app_bar_suggest_center_layout" />
</RelativeLayout>